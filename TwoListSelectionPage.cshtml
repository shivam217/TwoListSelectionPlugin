            {
                $("#leftValues option[value='NoItem']").remove();
                
                    @foreach (var kv in Model)
                    {
                       @:$("#leftValues").append("<option value='@kv.Value'>" + "@kv.Value" + "</option>");
                    }

            }
            else if (textValue == "Serena")
            {
